<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/foto"
    tools:context=".Intro">

    <ImageView
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:src="@drawable/babyboss"
        android:layout_marginTop="220dp"
        />

    <TextView
        android:id="@+id/hello_txt"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:text="Hello buddy!"
        android:textStyle="bold"
        android:textColor="@color/white"
        android:textSize="30dp"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="200dp"
        android:layout_marginTop="300dp"
        android:layout_marginBottom="310dp"
        />

    <TextView
        android:id="@+id/coach_txt"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:text="I'm your personal coach. Are you ready for start your exercises?."
        android:textSize="15dp"
        android:textColor="@color/white"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="150dp"
        android:layout_marginTop="350dp"
        android:layout_marginBottom="270dp"
        />

    <ImageView
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:src="@drawable/personal_coach"
        android:layout_marginStart="250dp"
        android:layout_marginTop="250dp"
        />

    <Button
        android:id="@+id/btn_ready"
        android:layout_width="350dp"
        android:layout_height="75dp"
        android:layout_marginTop="550dp"
        android:backgroundTint="@color/white"
        android:text="I'M READY"
        android:textStyle="bold"
        android:textSize="25dp"
        android:textColor="#1565C0"
        android:layout_centerHorizontal="true"
        />


</RelativeLayout>