<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/foto"
    tools:context=".ChooseExercises">

    <TextView
        android:id="@+id/txt_title"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:text="ARE YOU READY START YOUR EXERCISES?"
        android:textSize="25dp"
        android:textStyle="bold"
        android:fontFamily="serif"
        android:textColor="@color/white"
        android:layout_marginStart="10dp"
        android:layout_marginTop="20dp"
        />

    <TextView
        android:id="@+id/subtitle_txt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Choose your exercises"
        android:layout_marginTop="90dp"
        android:layout_marginStart="10dp"
        android:textSize="15dp"
        android:textStyle="bold"
        android:fontFamily="serif"
        android:textColor="@color/white"
        />

    <ImageView
        android:id="@+id/push_image"
        android:layout_width="150dp"
        android:layout_height="100dp"
        android:src="@drawable/pushday"
        android:layout_marginStart="10dp"
        android:layout_marginTop="140dp"
        />

    <TextView
        android:id="@+id/title_exercises1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="PUSH DAY WORKOUT"
        android:textSize="20dp"
        android:fontFamily="serif"
        android:textStyle="bold"
        android:textColor="@color/white"
        android:layout_toRightOf="@id/push_image"
        android:layout_marginStart="20dp"
        android:layout_marginTop="140dp"
         />

    <TextView
        android:id="@+id/txt_desc"
        android:layout_width="250dp"
        android:layout_height="40dp"
        android:text="BUILD AND GROW YOUR CHEST, SHOULDER AND TRICEP."
        android:textSize="10dp"
        android:fontFamily="serif"
        android:textColor="@color/white"
        android:layout_marginTop="170dp"
        android:layout_marginStart="20dp"
        android:layout_toRightOf="@id/push_image"
        />

    <ImageView
        android:id="@+id/pull_image"
        android:layout_width="150dp"
        android:layout_height="100dp"
        android:src="@drawable/pullday"
        android:layout_marginStart="10dp"
        android:layout_marginTop="270dp"
        />

    <TextView
        android:id="@+id/title_exercise2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="PULL DAY WORKOUT"
        android:textSize="20dp"
        android:fontFamily="serif"
        android:textStyle="bold"
        android:textColor="@color/white"
        android:layout_toRightOf="@id/pull_image"
        android:layout_marginStart="20dp"
        android:layout_marginTop="270dp"
        />

    <TextView
        android:id="@+id/txt_desc1"
        android:layout_width="250dp"
        android:layout_height="40dp"
        android:text="BUILD AND GROW YOUR BACK, BICEP, TRAP AND REAR DELTS."
        android:textSize="10dp"
        android:fontFamily="serif"
        android:textColor="@color/white"
        android:layout_marginTop="300dp"
        android:layout_marginStart="20dp"
        android:layout_toRightOf="@id/pull_image"
        />

    <ImageView
        android:id="@+id/leg_image"
        android:layout_width="150dp"
        android:layout_height="100dp"
        android:src="@drawable/legday"
        android:layout_marginStart="10dp"
        android:layout_marginTop="400dp"
        />

    <TextView
        android:id="@+id/title_exercises3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="LEG DAY WORKOUT"
        android:textSize="20dp"
        android:fontFamily="serif"
        android:textStyle="bold"
        android:textColor="@color/white"
        android:layout_toRightOf="@id/leg_image"
        android:layout_marginStart="20dp"
        android:layout_marginTop="400dp"
        />

    <TextView
        android:id="@+id/txt_desc2"
        android:layout_width="250dp"
        android:layout_height="40dp"
        android:text="BUILD AND MAKE YOUR LEG MUCH STRONGER WITH THIS EXERCISES."
        android:textSize="10dp"
        android:fontFamily="serif"
        android:textColor="@color/white"
        android:layout_marginTop="430dp"
        android:layout_marginStart="20dp"
        android:layout_toRightOf="@id/push_image"
        />

    <ImageView
        android:id="@+id/abs_image"
        android:layout_width="150dp"
        android:layout_height="100dp"
        android:src="@drawable/absworkout"
        android:layout_marginStart="10dp"
        android:layout_marginTop="530dp"
        />

    <TextView
        android:id="@+id/title_exercises4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="ABS WORKOUT"
        android:textSize="20dp"
        android:textColor="@color/white"
        android:fontFamily="serif"
        android:textStyle="bold"
        android:layout_toRightOf="@id/abs_image"
        android:layout_marginStart="20dp"
        android:layout_marginTop="530dp"
        />

    <TextView
        android:id="@+id/txt_desc3"
        android:layout_width="250dp"
        android:layout_height="40dp"
        android:text="BUILD AND MAKE YOUR ABS MUCH STRONGER WITH THIS EXERCISES."
        android:textSize="10dp"
        android:fontFamily="serif"
        android:textColor="@color/white"
        android:layout_marginTop="560dp"
        android:layout_marginStart="20dp"
        android:layout_toRightOf="@id/abs_image"
        />


</RelativeLayout>